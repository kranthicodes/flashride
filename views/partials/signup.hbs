<!--================================= Sign up design START =============================================-->
<section class="container-fluid signup-bgimage bgimage-property section-space white-text">
    <div class="container">
        <div class="signup-form-guest">
            <form action="#" method="#" id="signup-form">
                <h2>SIGN UP</h2>
                <p class="lead">It's free and hardly takes more than 30 seconds.</p>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <input type="text" class="form-control" id="signup-name" name="fullname" placeholder="Full Name"
                            required="required">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-paper-plane"></i></span>
                        <input type="email" class="form-control" id="signup-email" name="email"
                            placeholder="Email Address" required="required">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                        <input type="password" id="signup-password" class="form-control" name="password"
                            placeholder="Password" required="required">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-phone"></i>

                        </span>
                        <input type="text" class="form-control" id="signup-phonenumber" name="phone"
                            placeholder="Phone Number" value="+91-">
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block btn-lg">Sign Up</button>
                </div>
                <p class="small text-center">By clicking the Sign Up button, you agree to our <br><a href="#">Terms
                        &amp; Conditions</a>, and <a href="#">Privacy Policy</a>.</p>
            </form>
            <div class="text-center">
                <p>Already have an account?</p> <a href="/login">Login here</a>.
            </div>
        </div>

    </div>
</section>
<!--================================= END =============================================-->